---
import Section from "./Section.astro";
import type { AboutProps, HeroProps } from "@types";

type Props = AboutProps & Pick<HeroProps, "name">;

const { description, name } = Astro.props;
---

<Section text="About Me" href="about">
  <div class="relative">
    <!-- Decorative elements -->
    <div class="absolute -top-20 -left-20 w-40 h-40 rounded-full border border-white/5"></div>
    <div class="absolute -bottom-20 -right-20 w-52 h-52 rounded-full border border-white/5"></div>
    
    <div class="relative z-10 flex flex-col gap-12">
      <div class="flex-1">
        <div class="mb-6 inline-block p-4 rounded-full bg-white/5 border border-white/10">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zm-11-1a1 1 0 11-2 0 1 1 0 012 0z" clip-rule="evenodd" />
          </svg>
        </div>
        <p class="text-base text-neutral leading-relaxed md:pr-5 mb-8">{description}</p>
        
        <!-- Pricing Cards Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-3 sm:gap-4 md:gap-6 mt-8">
          <!-- Starter Plan -->
          <div class="group relative bg-white/5 border border-white/10 rounded-2xl p-5 sm:p-6 md:p-8 hover:border-white/30 hover:bg-white/10 transition-all duration-300 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="relative z-10">
              <div class="mb-5 sm:mb-6">
                <h3 class="text-xl sm:text-2xl font-bold text-white mb-2">Starter</h3>
              </div>
              <p class="text-neutral text-xs sm:text-sm mb-5 sm:mb-6">Perfect for small projects</p>
              <ul class="space-y-2 sm:space-y-3 mb-6 sm:mb-8">
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Website Design
                </li>
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Responsive Design
                </li>
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Basic Support
                </li>
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  UI/UX Design
                </li>
              </ul>
              <button class="w-full py-2 sm:py-3 px-4 text-sm sm:text-base rounded-full bg-white/10 hover:bg-white/20 text-white font-medium transition-all duration-300 border border-white/20 hover:border-white/40">Get Started</button>
            </div>
          </div>

          <!-- Professional Plan (Featured) -->
          <div class="group relative bg-white border border-white rounded-2xl p-5 sm:p-6 md:p-8 hover:shadow-2xl hover:shadow-white/20 transition-all duration-300 overflow-hidden lg:scale-105 lg:-my-4 md:col-span-2 lg:col-span-1">
            <div class="absolute top-0 right-0 bg-black text-white px-3 sm:px-4 py-1.5 rounded-bl-lg text-xs font-bold">POPULAR</div>
            <div class="relative z-10">
              <div class="mb-5 sm:mb-6">
                <h3 class="text-xl sm:text-2xl font-bold text-black mb-2">Professional</h3>
              </div>
              <p class="text-gray-600 text-xs sm:text-sm mb-5 sm:mb-6">Best for growing businesses</p>
              <ul class="space-y-2 sm:space-y-3 mb-6 sm:mb-8">
                <li class="flex items-center gap-3 text-black text-xs sm:text-sm font-medium">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-black flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Custom Design
                </li>
                <li class="flex items-center gap-3 text-black text-xs sm:text-sm font-medium">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-black flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Mobile App Development
                </li>
                <li class="flex items-center gap-3 text-black text-xs sm:text-sm font-medium">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-black flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  AI Integration
                </li>
                <li class="flex items-center gap-3 text-black text-xs sm:text-sm font-medium">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-black flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Priority Support
                </li>
                <li class="flex items-center gap-3 text-black text-xs sm:text-sm font-medium">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-black flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Analytics Dashboard
                </li>
              </ul>
              <button class="w-full py-2 sm:py-3 px-4 text-sm sm:text-base rounded-full bg-black hover:bg-gray-900 text-white font-medium transition-all duration-300">Get Started</button>
            </div>
          </div>

          <!-- Enterprise Plan -->
          <div class="group relative bg-white/5 border border-white/10 rounded-2xl p-5 sm:p-6 md:p-8 hover:border-white/30 hover:bg-white/10 transition-all duration-300 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            <div class="relative z-10">
              <div class="mb-5 sm:mb-6">
                <h3 class="text-xl sm:text-2xl font-bold text-white mb-2">Enterprise</h3>
              </div>
              <p class="text-neutral text-xs sm:text-sm mb-5 sm:mb-6">For large-scale projects</p>
              <ul class="space-y-2 sm:space-y-3 mb-6 sm:mb-8">
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Complete Solution
                </li>
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Advanced AI Solutions
                </li>
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Dedicated Team
                </li>
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  24/7 Support
                </li>
                <li class="flex items-center gap-3 text-white text-xs sm:text-sm">
                  <svg class="w-4 sm:w-5 h-4 sm:h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                  Custom Integrations
                </li>
              </ul>
              <button class="w-full py-2 sm:py-3 px-4 text-sm sm:text-base rounded-full bg-white/10 hover:bg-white/20 text-white font-medium transition-all duration-300 border border-white/20 hover:border-white/40">Contact Sales</button>
            </div>
